# Menus, etc.
for_window [app_id="simplemenu"] {
	floating enable
        resize set 800 330
	move position 350 720
}

for_window [app_id="translator"] {
        floating enable
        resize set 800 330
        move position 350 720
}

for_window [class="webcam"] {
        floating enable
        resize set 768 432
        move position 1150 620
}

