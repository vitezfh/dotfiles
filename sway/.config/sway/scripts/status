ping_counter=$(< $HOME/.cache/ping_status)

if [ "$battery_status" = "discharging" ]; then battery_pluggedin='ðŸ”‹'
else battery_pluggedin='ðŸ—²'; fi

if ! [ $network ]; then network_active="â›”"; else network_active="â‡†"; fi

if [ $player_status = "playing" ]; then song_status="ðŸŽ | â–¶ $song |$s"
elif [ $player_status = "paused" ]; then song_status="" #song_status="ðŸŽ | â¸ $song | $s"
else song_status=""; fi

if [ $audio_is_muted = 1 ]; then audio_active='ðŸ”‡'; else audio_active='ðŸ”Š'; fi

#if [ $brightness -gt 22 ]; then	brightness_glyph=ðŸŒž; elif [ $brightness -gt 10 ]
#then brightness_glyph="ðŸ”†"; else brightness_glyph=ðŸŒ™; fi

# ðŸ’ª ðŸ’° ðŸ”‹ ðŸ“¶ ðŸ”ˆðŸ”‰ðŸ”Š ðŸ”‡ ðŸ—›  ðŸ”Œ ðŸ”¥ ðŸ’¤ 
echo "$song_status \
$weather $s \
$audio_active $volume $s \
$battery_pluggedin $battery $s \
ðŸ”¥ $loadavg_5min$s \
$network_active $network ($ping_counter ms) $s \
$time\
$holiday"


