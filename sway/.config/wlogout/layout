{
    "label" : "lock",
    "action" : "swaylock --image /opt/oc-bg.png",
    "keybind" : "h"
}
{
    "label" : "hibernate",
    "action" : "swaylock --image /opt/oc-bg.png & sleep 1 && sudo zzz",
    "keybind" : "j"
}
{
    "label" : "reboot",
    "action" : "$HOME/.config/sway/scripts/pre-shutdown.sh ; sudo reboot",
    "keybind" : "k"
}
{
    "label" : "shutdown",
    "action" : "$HOME/.config/sway/scripts/pre-shutdown.sh ; sudo poweroff",
    "keybind" : "l"
}
